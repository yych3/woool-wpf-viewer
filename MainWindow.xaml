<Window x:Class="WpfFileViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="传世 WPF 文件查看器" Height="600" Width="800">
    <Grid>
        <!-- 打开文件按钮 -->
        <Button Content="打开文件" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Width="75" Click="OpenFileButton_Click"/>
       <!-- 预览窗口，用于显示文件内容，添加滚动条 -->
        <TextBox x:Name="PreviewTextBox" 
                 HorizontalAlignment="Left" 
                 Height="500" 
                 Margin="20,60,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="760" 
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
